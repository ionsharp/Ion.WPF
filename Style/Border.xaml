<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="clr-namespace:Ion.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="{i:Style Key=FrameworkElement}"/>
    </ResourceDictionary.MergedDictionaries>
    <Style x:Key="{x:Type Border}" TargetType="{x:Type Border}" BasedOn="{StaticResource {x:Type FrameworkElement}}">
        <Setter Property="i:XBorder.Clip" Value="True" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
    </Style>

    <!-- /// -->

    <Style x:Key="{x:Type i:ClipBorder}" TargetType="{x:Type i:ClipBorder}" BasedOn="{StaticResource {x:Type Border}}"/>

    <!-- /// -->

    <Style x:Key="{x:Type i:AllBorder}" TargetType="{x:Type i:AllBorder}" BasedOn="{StaticResource {x:Type Border}}">
        <Setter Property="BorderBrush" Value="#1A000000" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style x:Key="{x:Type i:BottomBorder}" TargetType="{x:Type i:BottomBorder}" BasedOn="{StaticResource {x:Type Border}}">
        <Setter Property="BorderBrush" Value="#1A000000" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
    </Style>

    <Style x:Key="{x:Type i:LeftBorder}" TargetType="{x:Type i:LeftBorder}" BasedOn="{StaticResource {x:Type Border}}">
        <Setter Property="BorderBrush" Value="#1A000000" />
        <Setter Property="BorderThickness" Value="1,0,0,0" />
    </Style>

    <Style x:Key="{x:Type i:RightBorder}" TargetType="{x:Type i:RightBorder}" BasedOn="{StaticResource {x:Type Border}}">
        <Setter Property="BorderBrush" Value="#1A000000" />
        <Setter Property="BorderThickness" Value="0,0,1,0" />
    </Style>

    <Style x:Key="{x:Type i:TopBorder}" TargetType="{x:Type i:TopBorder}" BasedOn="{StaticResource {x:Type Border}}">
        <Setter Property="BorderBrush" Value="#1A000000" />
        <Setter Property="BorderThickness" Value="0,1,0,0" />
    </Style>

    <!-- /// -->

    <Style x:Key="{x:Type i:RoundBorder}" TargetType="{x:Type i:RoundBorder}" BasedOn="{StaticResource {x:Type Border}}">
        <Setter Property="BorderBrush" Value="#1A000000" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="999" />
        <Setter Property="ClipToBounds" Value="True" />
    </Style>

    <!-- /// -->

    <Style x:Key="{x:Type i:DashedBorder}" TargetType="{x:Type i:DashedBorder}" BasedOn="{StaticResource {x:Type Border}}">
        <Setter Property="BorderBrush" Value="#1A000000" />
        <Setter Property="BorderDashSize" Value="8,8" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style x:Key="{x:Type i:SelectionBorder}" TargetType="{x:Type i:SelectionBorder}" BasedOn="{StaticResource {x:Type Border}}">
        <Setter Property="Background" Value="{i:Theme SelectionCanvasBackground}"/>
        <Setter Property="BorderBrush" Value="{i:Theme SelectionCanvasBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="0.5"/>
        <!--<Setter Property="RenderTransform">
            <Setter.Value>
                <TranslateTransform X="{i:Bind X}" Y="{i:Bind Y}"/>
            </Setter.Value>
        </Setter>-->
    </Style>
</ResourceDictionary>