<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:i="clr-namespace:Ion.Controls"
    xmlns:Data="clr-namespace:Ion.Data"
    xmlns:Math="clr-namespace:Ion.Numeral;assembly=Ion">
    <Style x:Key="{x:Type i:ProgressRing}" TargetType="{x:Type i:ProgressRing}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BackgroundStroke" Value="#22000000"/>
        <Setter Property="BackgroundStrokeThickness" Value="6"/>
        <Setter Property="Foreground" Value="{i:Theme ProgressCircleForeground}"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="InnerRadius" Value="20"/>
        <Setter Property="i:XProgressBar.Content" Value="{i:Bind From=Self, Path=Value}" />
        <Setter Property="i:XProgressBar.ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Foreground="{i:Theme Text}" Text="{i:Bind StringFormat={}{0:p0}}"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Maximum" Value="1"/>
        <Setter Property="Minimum" Value="0"/>
        <Setter Property="Radius" Value="60"/>
        <Setter Property="StrokeThickness" Value="6"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="i:ProgressRing">
                    <Grid
                        Height="{i:Bind From=TemplatedParent, Path=Radius, Convert={x:Type Data:ConvertRadiusToDiameter}}"
                        Width="{i:Bind From=TemplatedParent, Path=Radius, Convert={x:Type Data:ConvertRadiusToDiameter}}">
                        <Grid.Resources>
                            <Data:Reference x:Key="ProgressRing" Data="{i:Bind From=TemplatedParent}"/>
                        </Grid.Resources>
                        <Path Fill="{TemplateBinding Background}">
                            <Path.Data>
                                <EllipseGeometry 
                                    Center="{Data:Ancestor Radius, i:ProgressRing, Convert=Data:ConvertDoubleToPoint}">
                                    <EllipseGeometry.RadiusX>
                                        <Data:MultiBind ConverterName="Math">
                                            <Binding Path="Data.Radius" 
                                                Source="{StaticResource ProgressRing}"/>
                                            <Binding Source="{x:Static Math:Operator.Subtract}"/>
                                            <Binding Path="Data.StrokeThickness" 
                                                Source="{StaticResource ProgressRing}"/>
                                        </Data:MultiBind>
                                    </EllipseGeometry.RadiusX>
                                    <EllipseGeometry.RadiusY>
                                        <i:Bind From="Self" Path="RadiusX"/>
                                    </EllipseGeometry.RadiusY>
                                </EllipseGeometry>
                            </Path.Data>
                        </Path>
                        <Ellipse
                            Height="{i:Bind From=TemplatedParent, Path=Radius, Convert={x:Type Data:ConvertRadiusToDiameter}}"
                            Stroke="{TemplateBinding BackgroundStroke}" 
                            StrokeThickness="{TemplateBinding BackgroundStrokeThickness}"
                            Width="{i:Bind From=TemplatedParent, Path=Radius, Convert={x:Type Data:ConvertRadiusToDiameter}}"/>
                        <Path
                            Stroke="{TemplateBinding Foreground}" 
                            StrokeThickness="{TemplateBinding StrokeThickness}">
                            <Path.Data>
                                <PathGeometry>
                                    <PathFigure>
                                        <PathFigure.StartPoint>
                                            <Data:MultiBind ConverterType="{x:Type i:ProgressRingStrokeToStartPointConverter}">
                                                <Binding Path="Data.Radius" 
                                                    Source="{StaticResource ProgressRing}"/>
                                                <Binding Path="Data.StrokeThickness" 
                                                    Source="{StaticResource ProgressRing}"/>
                                            </Data:MultiBind>
                                        </PathFigure.StartPoint>
                                        <ArcSegment 
                                            RotationAngle="0" 
                                            SweepDirection="Clockwise"
                                            IsLargeArc="{i:CompareDouble Angle, From=FindAncestor, FromType=i:ProgressRing, Type=Greater, Value=180}">
                                            <ArcSegment.Point>
                                                <Data:MultiBind ConverterType="{x:Type i:ProgressRingAngleToPointConverter}">
                                                    <Binding Path="Data.Angle" 
                                                        Source="{StaticResource ProgressRing}"/>
                                                    <Binding Path="Data.Radius" 
                                                        Source="{StaticResource ProgressRing}"/>
                                                    <Binding Path="Data.StrokeThickness" 
                                                        Source="{StaticResource ProgressRing}"/>
                                                </Data:MultiBind>
                                            </ArcSegment.Point>
                                            <ArcSegment.Size>
                                                <Data:MultiBind ConverterType="{x:Type i:ProgressRingRadiusToSizeConverter}">
                                                    <Binding Path="Data.Radius" 
                                                        Source="{StaticResource ProgressRing}"/>
                                                    <Binding Path="Data.StrokeThickness" 
                                                        Source="{StaticResource ProgressRing}"/>
                                                </Data:MultiBind>
                                            </ArcSegment.Size>
                                        </ArcSegment>
                                    </PathFigure>
                                </PathGeometry>
                            </Path.Data>
                        </Path>

                        <ContentPresenter
                            Content="{i:Bind From=TemplatedParent, Path=(i:XProgressBar.Content)}"
                            ContentTemplate="{i:Bind From=TemplatedParent, Path=(i:XProgressBar.ContentTemplate)}"
                            ContentTemplateSelector="{i:Bind From=TemplatedParent, Path=(i:XProgressBar.ContentTemplateSelector)}"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>