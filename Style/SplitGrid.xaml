<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:l="http://wpflocalizeextension.codeplex.com"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="clr-namespace:Ion.Controls"
    xmlns:Data="clr-namespace:Ion.Data">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="{i:Style Key=GridSplitter}"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="{x:Type i:SplitGrid}" TargetType="{x:Type i:SplitGrid}">
        <Setter Property="SplitterStyle">
            <Setter.Value>
                <Style TargetType="{x:Type GridSplitter}" BasedOn="{StaticResource {x:Type GridSplitter}}">
                    <Setter Property="ContextMenu">
                        <Setter.Value>
                            <ContextMenu>
                                <MenuItem Header="{l:Loc Collapse}"
                                    IsCheckable="True"
                                    IsChecked="{Data:Ancestor FromType={x:Type ContextMenu}, Mode=TwoWay, Path=PlacementTarget.Tag.IsCollapsed}"/>
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="{i:Theme Text}"/>
                    <Setter Property="i:XGridSplitter.ContentTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <Grid i:XGrid.Columns="*,Auto"
                                    i:XGrid.Rows="*,Auto">
                                    <StackPanel x:Name="PART_DefaultButtons" 
                                        Orientation="{Data:Ancestor Orientation, {x:Type i:SplitGrid}}" 
                                        i:XPanel.Spacing="{Data:Ancestor ButtonSpacing, {x:Type i:SplitGrid}}"
                                        i:XPanel.SpacingExcept="None">
                                        <Grid x:Name="PART_CollapseButtons">
                                            <i:ImageButton 
                                                x:Name="PART_CollapseLeft" 
                                                Command="{Data:Ancestor CollapseCommand, {x:Type i:SplitGrid}}"
                                                CommandParameter="True"
                                                Source="{i:Image Key=ArrowLeftRound}" 
                                                ToolTip="{i:Text CollapseLeft}"
                                                Visibility="{i:Equal Orientation, {x:Static Orientation.Vertical}, From=FindAncestor, FromType={x:Type i:SplitGrid}, Result=Visibility}"/>
                                            <i:ImageButton 
                                                x:Name="PART_CollapseUp" 
                                                Command="{Data:Ancestor CollapseCommand, {x:Type i:SplitGrid}}"
                                                CommandParameter="False"
                                                Source="{i:Image Key=ArrowUpRound}" 
                                                ToolTip="{i:Text CollapseUp}"
                                                Visibility="{i:Equal Orientation, {x:Static Orientation.Horizontal}, From=FindAncestor, FromType={x:Type i:SplitGrid}, Result=Visibility}"/>
                                        </Grid>
                                        <i:ImageButton x:Name="PART_AlignButton" 
                                            Command="{Data:Ancestor AlignCommand, {x:Type i:SplitGrid}}"
                                            Source="{i:Image Key=AlignCenter}" 
                                            ToolTip="{i:Text Align}"/>
                                        <i:ImageToggleButton x:Name="PART_HorizontalButton" 
                                            IsChecked="{i:Equal Orientation, From=FindAncestor, FromType={x:Type i:SplitGrid}, Value={x:Static Orientation.Horizontal}, Way=2}"
                                            GroupName="SplitOrientation"
                                            Source="{i:Image Key=Rows}" 
                                            ToolTip="{i:Text TopAndBottom}"
                                            Visibility="{i:Bind IsChecked, Convert=Data:ConvertBooleanToVisibility, ConverterParameter=1, From=Self}"/>
                                        <i:ImageToggleButton x:Name="PART_VerticalButton"
                                            GroupName="SplitOrientation"
                                            IsChecked="{i:Equal Orientation, From=FindAncestor, FromType={x:Type i:SplitGrid}, Value={x:Static Orientation.Vertical}, Way=2}"
                                            Source="{i:Image Key=Columns}" 
                                            ToolTip="{i:Text SideBySide}"
                                            Visibility="{i:Bind IsChecked, Convert=Data:ConvertBooleanToVisibility, ConverterParameter=1, From=Self}"/>
                                        <Grid x:Name="PART_SwapButtons">
                                            <i:ImageButton Source="{i:Image Key=UpDownArrows}"
                                                Command="{Data:Ancestor SwapCommand, {x:Type i:SplitGrid}}"
                                                ToolTip="{i:Text SwapRows}" 
                                                Visibility="{i:Equal Orientation, {x:Static Orientation.Horizontal}, From=FindAncestor, FromType={x:Type i:SplitGrid}, Result=Visibility}"/>
                                            <i:ImageButton Source="{i:Image Key=LeftRightArrows}" 
                                                Command="{Data:Ancestor SwapCommand, {x:Type i:SplitGrid}}"
                                                ToolTip="{i:Text SwapColumns}"
                                                Visibility="{i:Equal Orientation, {x:Static Orientation.Vertical}, From=FindAncestor, FromType={x:Type i:SplitGrid}, Result=Visibility}"/>
                                        </Grid>
                                        <i:ImageToggleButton Source="{i:Image Key=Collapse}" 
                                            IsChecked="{Data:Ancestor IsCollapsed, i:SplitGrid, Way=2}"
                                            ToolTip="{i:Text Collapse}"/>
                                    </StackPanel>
                                    <ItemsControl x:Name="PART_CustomButtons"
                                        ItemsSource="{Data:Ancestor Buttons, {x:Type i:SplitGrid}}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <ContentPresenter Content="{i:Bind}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="{Data:Ancestor Orientation, {x:Type i:SplitGrid}}" i:XPanel.Spacing="{Data:Ancestor ButtonSpacing, {x:Type i:SplitGrid}}"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Data:Ancestor ResizeDirection, {x:Type GridSplitter}}" Value="Columns">
                                        <Setter TargetName="PART_DefaultButtons" 
                                                Property="Grid.Row" Value="0"/>
                                        <Setter TargetName="PART_DefaultButtons" 
                                                Property="Grid.Column" Value="0"/>
                                        <Setter TargetName="PART_DefaultButtons" 
                                                Property="Grid.RowSpan" Value="1"/>
                                        <Setter TargetName="PART_DefaultButtons" 
                                                Property="Grid.ColumnSpan" Value="2"/>
                                        <Setter TargetName="PART_DefaultButtons" 
                                                Property="VerticalAlignment" Value="Top"/>
                                        <Setter TargetName="PART_DefaultButtons" 
                                                Property="HorizontalAlignment" Value="Center"/>

                                        <Setter TargetName="PART_SwapButtons" 
                                                Property="Margin" Value="0,5,0,0"/>
                                        
                                        <Setter TargetName="PART_CollapseLeft" 
                                                Property="HorizontalAlignment" Value="Center"/>
                                        <Setter TargetName="PART_CollapseUp" 
                                                Property="HorizontalAlignment" Value="Center"/>

                                        <Setter TargetName="PART_HorizontalButton" 
                                                Property="HorizontalAlignment" Value="Center"/>
                                        <Setter TargetName="PART_VerticalButton" 
                                                Property="HorizontalAlignment" Value="Center"/>

                                        <Setter TargetName="PART_AlignButton"
                                                Property="HorizontalAlignment" Value="Center"/>

                                        <Setter TargetName="PART_CustomButtons" 
                                                Property="Grid.Row" Value="1"/>
                                        <Setter TargetName="PART_CustomButtons" 
                                                Property="Grid.Column" Value="0"/>
                                        <Setter TargetName="PART_CustomButtons" 
                                                Property="Grid.RowSpan" Value="1"/>
                                        <Setter TargetName="PART_CustomButtons" 
                                                Property="Grid.ColumnSpan" Value="2"/>
                                        <Setter TargetName="PART_CustomButtons" 
                                                Property="Margin" Value="0,0,0,5"/>
                                        <Setter TargetName="PART_CustomButtons" 
                                                Property="VerticalAlignment" Value="Bottom"/>
                                        <Setter TargetName="PART_CustomButtons" 
                                                Property="HorizontalAlignment" Value="Center"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Data:Ancestor ResizeDirection, {x:Type GridSplitter}}" Value="Rows">
                                        <Setter TargetName="PART_DefaultButtons" 
                                                Property="Grid.Row" Value="0"/>
                                        <Setter TargetName="PART_DefaultButtons" 
                                                Property="Grid.Column" Value="0"/>
                                        <Setter TargetName="PART_DefaultButtons" 
                                                Property="Grid.RowSpan" Value="2"/>
                                        <Setter TargetName="PART_DefaultButtons" 
                                                Property="Grid.ColumnSpan" Value="1"/>
                                        <Setter TargetName="PART_DefaultButtons" 
                                                Property="VerticalAlignment" Value="Center"/>
                                        <Setter TargetName="PART_DefaultButtons"
                                                Property="HorizontalAlignment" Value="Left"/>

                                        <Setter TargetName="PART_CollapseUp" 
                                                Property="Padding" Value="0,0,5,0"/>

                                        <Setter TargetName="PART_CustomButtons"
                                                Property="Grid.Row" Value="0"/>
                                        <Setter TargetName="PART_CustomButtons" 
                                                Property="Grid.Column" Value="1"/>
                                        <Setter TargetName="PART_CustomButtons"
                                                Property="Grid.RowSpan" Value="2"/>
                                        <Setter TargetName="PART_CustomButtons" 
                                                Property="Grid.ColumnSpan" Value="1"/>
                                        <Setter TargetName="PART_CustomButtons"
                                                Property="Margin" Value="0,0,5,0"/>
                                        <Setter TargetName="PART_CustomButtons"
                                                Property="VerticalAlignment" Value="Center"/>
                                        <Setter TargetName="PART_CustomButtons"
                                                Property="HorizontalAlignment" Value="Right"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="i:ImageElement.Foreground" Value="{i:Theme Text}"/>
                    <Setter Property="Padding" Value="2"/>
                    <Setter Property="ShowsPreview" Value="True"/>
                    <Setter Property="Tag" Value="{Data:Ancestor FromType={x:Type i:SplitGrid}}"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Data:Ancestor IsCollapsed, i:SplitGrid}" Value="True">
                            <Setter Property="i:XGridSplitter.ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate/>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Vertical">
                <Setter Property="ButtonSpacing" Value="0,5,0,0"/>
            </Trigger>
            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="ButtonSpacing" Value="5,0,0,0"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>