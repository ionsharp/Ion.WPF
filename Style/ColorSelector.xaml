    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="{i:Style Key=Control}"/>
    </ResourceDictionary.MergedDictionaries>
    <!--#region (base) ColorSelector-->

    <Style x:Key="{x:Type i:ColorSelector}" TargetType="{x:Type i:ColorSelector}" BasedOn="{StaticResource {x:Type Control}}">
        <Setter Property="Background" Value="{x:Static Media:CheckerBrush.Default}"/>
        <Setter Property="BorderBrush" Value="Black"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!--#endregion-->

    <!--#region ComponentSelector-->

    <!--#region ComponentSelector2D-->

    <DataTemplate x:Key="ComponentSelector2DTemplate">
        <i:FillElement Fill="White"
            DataContext="{i:Bind Data}"
            Height="1" Width="1">
            <i:FillElement.Effect>
                <Effects:ColorModelEffect
                    XComponent="{i:Bind XComponent, Convert={x:Type Data:ConvertComponent4ToDouble}}"
                    YComponent="{i:Bind YComponent, Convert={x:Type Data:ConvertComponent4ToDouble}}"
                    Depth="{i:Bind Depth}"
                    Mode="XY"
                    Model="{i:Bind Model}"
                    Profile="{i:Bind Profile}"
                    Shape="{i:Bind Shape}"
                    X="{i:Bind X, Convert={x:Type Data:ConvertDouble1ToDouble}}"
                    Y="{i:Bind Y, Convert={x:Type Data:ConvertDouble1ToDouble}}"
                    Z="{i:Bind Z, Convert={x:Type Data:ConvertDouble1ToDouble}}"
                    W="{i:Bind W, Convert={x:Type Data:ConvertDouble1ToDouble}}"/>
            </i:FillElement.Effect>
        </i:FillElement>
    </DataTemplate>

    <Style x:Key="{x:Type i:ComponentSelector2D}" TargetType="{x:Type i:ComponentSelector2D}" BasedOn="{StaticResource {x:Type i:ColorSelector}}">
        <Setter Property="ClipToBounds" Value="True"/>
        <Setter Property="EllipseDiameter" Value="12"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type i:ComponentSelector2D}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding Border.CornerRadius}">
                        <Border.Resources>
                            <Data:Reference x:Key="ComponentSelector" Data="{i:Bind From=TemplatedParent}"/>
                        </Border.Resources>
                        <ContentPresenter>
                            <ContentPresenter.ContentTemplate>
                                <DataTemplate>
                                    <Grid DataContext="{i:Bind Source={StaticResource ComponentSelector}}">
                                        <Viewbox x:Name="Viewbox" Stretch="Fill">
                                            <ContentPresenter Content="{i:Bind}" ContentTemplate="{StaticResource ComponentSelector2DTemplate}"/>
                                        </Viewbox>
                                        <i:ComponentSelectorEllipse x:Name="Ellipse" Diameter="{i:Bind Data.EllipseDiameter}"
                                            X="{i:Bind Data.EllipsePosition.X}" 
                                            Y="{i:Bind Data.EllipsePosition.Y}"/>
                                    </Grid>
                                </DataTemplate>
                            </ContentPresenter.ContentTemplate>
                        </ContentPresenter>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--#endregion-->

