    <!--#region (base) BaseComponentSlider-->

    <Style x:Key="{x:Type i:BaseComponentSlider}" TargetType="{x:Type i:BaseComponentSlider}" BasedOn="{StaticResource {x:Type i:ColorSelector}}">
        <Setter Property="ArrowForeground" Value="#AA000000"/>
        <Setter Property="ArrowTemplate">
            <Setter.Value>
                <DataTemplate DataType="{x:Type Brush}">
                    <Polygon
                        Fill="{i:Bind}"
                        Points="0,0 6,8 0,16 0,0"
                        SnapsToDevicePixels="True"
                        Stroke="White"
                        StrokeThickness="1"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="ArrowForeground" Value="#FF000000"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--#endregion-->

    <!--#region ComponentSlider-->
    
    <Style x:Key="{x:Type i:ComponentSlider}" TargetType="{x:Type i:ComponentSlider}" BasedOn="{StaticResource {x:Type i:BaseComponentSlider}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type i:ComponentSlider}">
                    <Grid>
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding Border.CornerRadius}">
                            <Viewbox Stretch="Fill">
                                <i:FillElement x:Name="PART_Fill" Fill="White"
                                    DataContext="{i:Bind From=TemplatedParent}"
                                    Height="1" Width="1">
                                    <i:FillElement.Effect>
                                        <Effects:ColorModelEffect
                                            XComponent="{i:Bind Component, Convert={x:Type Data:ConvertComponent4ToDouble}}"
                                            Depth="{i:Bind Depth}"
                                            Mode="Z"
                                            Model="{i:Bind Model}"
                                            Profile="{i:Bind Profile}"
                                            Shape="{i:Bind Shape}"
                                            X="{i:Bind Convert=Data:ConvertOneToDouble, Path=X}"
                                            Y="{i:Bind Convert=Data:ConvertOneToDouble, Path=Y}"
                                            Z="{i:Bind Convert=Data:ConvertOneToDouble, Path=Z}"
                                            W="{i:Bind Convert=Data:ConvertOneToDouble, Path=W}"/>
                                    </i:FillElement.Effect>
                                </i:FillElement>
                            </Viewbox>
                        </Border>
                        <ContentPresenter x:Name="ContentPresenter" Content="{i:Bind From=TemplatedParent, Path=ArrowPosition}"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Shape" Value="Circle">
                            <Setter TargetName="ContentPresenter" Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <i:ComponentSelectorEllipse Diameter="12"
                                            X="{i:Bind X}" 
                                            Y="{i:Bind Y}"/>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="Shape" Value="Square">
                            <Setter TargetName="ContentPresenter" Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <Canvas>
                                            <ContentPresenter Content="{Data:Ancestor ArrowForeground, i:ComponentSlider}"
                                                ContentTemplate="{Data:Ancestor ArrowTemplate, i:ComponentSlider}"
                                                Canvas.Left="{Data:Ancestor ArrowPosition.X, i:ComponentSlider}"
                                                Canvas.Top="{Data:Ancestor ArrowPosition.Y, i:ComponentSlider}"/>
                                        </Canvas>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--#endregion-->

    <!--#region AlphaSlider-->

    <Style x:Key="{x:Type i:AlphaSlider}" TargetType="{x:Type i:AlphaSlider}" BasedOn="{StaticResource {x:Type i:BaseComponentSlider}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type i:AlphaSlider}">
                    <Grid>
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding Background}"
                            CornerRadius="{TemplateBinding Border.CornerRadius}">
                            <Viewbox Stretch="Fill">
                                <i:FillElement DataContext="{i:Bind From=TemplatedParent}" Height="1" Width="1">
                                    <i:FillElement.Fill>
                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                            <GradientStop Offset="0" Color="{i:Bind Color, Convert={x:Type Data:ConvertColorWithoutAlpha}, Mode=OneWay}"/>
                                            <GradientStop Offset="1" Color="Transparent"/>
                                        </LinearGradientBrush>
                                    </i:FillElement.Fill>
                                </i:FillElement>
                            </Viewbox>
                        </Border>
                        <Canvas x:Name="PART_Canvas">
                            <ContentPresenter
                                Canvas.Left="{i:Bind From=TemplatedParent, Path=ArrowPosition.X}"
                                Canvas.Top="{i:Bind From=TemplatedParent, Path=ArrowPosition.Y}"
                                Content="{TemplateBinding ArrowForeground}"
                                ContentTemplate="{TemplateBinding ArrowTemplate}"/>
                        </Canvas>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--#endregion-->

    <!--#region ColorSelectorView-->

    <Style x:Key="{x:Type i:ColorSelectorView}" TargetType="{x:Type i:ColorSelectorView}" BasedOn="{StaticResource {x:Type Control}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="i:ColorSelectorView">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding Border.CornerRadius}"
                        Padding="{TemplateBinding Padding}">
                        <Border.Resources>
                            <!-- (🗸) 3 > 1D -->
                            <DataTemplate x:Key="Color3Template1D" DataType="{x:Type i:ColorDocument}">
                                <Grid i:XGrid.AutoColumns="True">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition x:Name="Column0"/>
                                        <ColumnDefinition x:Name="Column1"/>
                                        <ColumnDefinition x:Name="Column2"/>
                                    </Grid.ColumnDefinitions>
                                    <i:ComponentSlider x:Name="XComponentSlider"
                                        Component="X"
                                        Depth="{i:Bind Depth}"
                                        Margin="0,0,5,0"
                                        Model="{i:Bind Model}"
                                        Profile="{i:Bind Profile}"
                                        X="{i:Bind Color.X, Mode=TwoWay}"
                                        Y="{i:Bind Color.Y}"
                                        Z="{i:Bind Color.Z}"/>
                                    <i:ComponentSlider x:Name="YComponentSlider"
                                        Component="Y"
                                        Depth="{i:Bind Depth}"
                                        Margin="0,0,5,0"
                                        Model="{i:Bind Model}"
                                        Profile="{i:Bind Profile}"
                                        X="{i:Bind Color.X}"
                                        Y="{i:Bind Color.Y, Mode=TwoWay}"
                                        Z="{i:Bind Color.Z}"/>
                                    <i:ComponentSlider x:Name="ZComponentSlider"
                                        Component="Z"
                                        Depth="{i:Bind Depth}"
                                        Model="{i:Bind Model}"
                                        Profile="{i:Bind Profile}"
                                        X="{i:Bind Color.X}"
                                        Y="{i:Bind Color.Y}"
                                        Z="{i:Bind Color.Z, Mode=TwoWay}"/>
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{i:Bind Component}" Value="X">
                                        <Setter TargetName="Column0" Property="Width" Value="*"/>
                                        <Setter TargetName="Column1" Property="Width" Value="Auto"/>
                                        <Setter TargetName="Column2" Property="Width" Value="Auto"/>

                                        <Setter TargetName="XComponentSlider" Property="Shape" Value="{i:Bind Shape}"/>
                                        <Setter TargetName="YComponentSlider" Property="Shape" Value="Square"/>
                                        <Setter TargetName="ZComponentSlider" Property="Shape" Value="Square"/>

                                        <Setter TargetName="XComponentSlider" Property="Width" Value="Auto"/>
                                        <Setter TargetName="YComponentSlider" Property="Width" Value="48"/>
                                        <Setter TargetName="ZComponentSlider" Property="Width" Value="48"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{i:Bind Component}" Value="Y">
                                        <Setter TargetName="Column0" Property="Width" Value="Auto"/>
                                        <Setter TargetName="Column1" Property="Width" Value="*"/>
                                        <Setter TargetName="Column2" Property="Width" Value="Auto"/>

                                        <Setter TargetName="XComponentSlider" Property="Shape" Value="Square"/>
                                        <Setter TargetName="YComponentSlider" Property="Shape" Value="{i:Bind Shape}"/>
                                        <Setter TargetName="ZComponentSlider" Property="Shape" Value="Square"/>

                                        <Setter TargetName="XComponentSlider" Property="Width" Value="48"/>
                                        <Setter TargetName="YComponentSlider" Property="Width" Value="Auto"/>
                                        <Setter TargetName="ZComponentSlider" Property="Width" Value="48"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{i:Bind Component}" Value="Z">
                                        <Setter TargetName="Column0" Property="Width" Value="Auto"/>
                                        <Setter TargetName="Column1" Property="Width" Value="Auto"/>
                                        <Setter TargetName="Column2" Property="Width" Value="*"/>

                                        <Setter TargetName="XComponentSlider" Property="Shape" Value="Square"/>
                                        <Setter TargetName="YComponentSlider" Property="Shape" Value="Square"/>
                                        <Setter TargetName="ZComponentSlider" Property="Shape" Value="{i:Bind Shape}"/>

                                        <Setter TargetName="XComponentSlider" Property="Width" Value="48"/>
                                        <Setter TargetName="YComponentSlider" Property="Width" Value="48"/>
                                        <Setter TargetName="ZComponentSlider" Property="Width" Value="Auto"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>

                            <!-- (🗸) 3 > 2D -->
                            <DataTemplate x:Key="Color3Template2D" DataType="{x:Type i:ColorDocument}">
                                <Grid i:XGrid.AutoColumns="True" i:XGrid.Columns="*,Auto">
                                    <i:ComponentSelector2D x:Name="ComponentSelector"
                                        BorderBrush="Black"
                                        BorderThickness="1"
                                        Depth="{i:Bind Depth}"
                                        Margin="0,0,5,0"
                                        Model="{i:Bind Model}"
                                        Profile="{i:Bind Profile}"
                                        RotateX="{i:Bind RotateX}"
                                        RotateY="{i:Bind RotateY}"
                                        RotateZ="{i:Bind RotateZ}"
                                        Shape="{i:Bind Shape}"
                                        Zoom="{i:Bind Zoom}"/>
                                    <i:ComponentSlider x:Name="ComponentSlider"
                                        Component="{i:Bind Component}"
                                        Depth="{i:Bind Depth}"
                                        Model="{i:Bind Model}"
                                        Profile="{i:Bind Profile}"
                                        Width="48"/>
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{i:Bind Component}" Value="X">
                                        <Setter TargetName="ComponentSelector" Property="XComponent" Value="Y"/>
                                        <Setter TargetName="ComponentSelector" Property="YComponent" Value="Z"/>
                                        <Setter TargetName="ComponentSelector" Property="X" Value="{i:Bind Color.X, Mode=OneWay}"/>
                                        <Setter TargetName="ComponentSelector" Property="Y" Value="{i:Bind Color.Y, Mode=TwoWay}"/>
                                        <Setter TargetName="ComponentSelector" Property="Z" Value="{i:Bind Color.Z, Mode=TwoWay}"/>

                                        <Setter TargetName="ComponentSlider" Property="X" Value="{i:Bind Color.X, Mode=TwoWay}"/>
                                        <Setter TargetName="ComponentSlider" Property="Y" Value="{i:Bind Color.Y, Mode=OneWay}"/>
                                        <Setter TargetName="ComponentSlider" Property="Z" Value="{i:Bind Color.Z, Mode=OneWay}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{i:Bind Component}" Value="Y">
