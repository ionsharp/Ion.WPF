<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="clr-namespace:Ion.Controls"
    xmlns:Data="clr-namespace:Ion.Data">
    <Style x:Key="{x:Type Separator}" TargetType="{x:Type Separator}">
        <Setter Property="BorderBrush" Value="{i:Theme LineStroke}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Height" Value="Auto" />
        <Setter Property="i:XSeparator.HeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{i:Bind Convert=Data:ConvertToStringUpper}"
                        FontSize="11"
                        FontWeight="Bold"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="i:XSeparator.IconTemplate">
            <Setter.Value>
                <DataTemplate>
                    <i:ImageElement Source="{i:Bind}"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Padding" Value="0,0,5,0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Separator}">
                    <Grid i:XGrid.Columns="Auto,*"
                        i:XPanel.VerticalContentAlignment="Center">
                        <Grid i:XGrid.Columns="Auto,Auto"
                            i:XPanel.VerticalContentAlignment="Center"
                            Margin="{TemplateBinding Padding}">
                            <ContentPresenter Grid.Column="0"
                                Content="{i:Bind From=TemplatedParent, Path=(i:XSeparator.Icon)}"
                                ContentTemplate="{i:Bind From=TemplatedParent, Path=(i:XSeparator.IconTemplate)}"
                                Margin="0,0,5,0"
                                Visibility="{i:Bind Convert=Data:ConvertObjectToVisibility, Path=(i:XSeparator.Icon), From=TemplatedParent}"/>
                            <ContentPresenter Grid.Column="1"
                                Content="{i:Bind From=TemplatedParent, Path=(i:XSeparator.Header)}"
                                ContentTemplate="{i:Bind From=TemplatedParent, Path=(i:XSeparator.HeaderTemplate)}"
                                Visibility="{i:Bind Convert=Data:ConvertObjectToVisibility, Path=(i:XSeparator.Header), From=TemplatedParent}"/>
                        </Grid>
                        <i:LineElement Grid.Column="1"
                            Stroke="{TemplateBinding BorderBrush}"
                            StrokeThickness="1"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>