<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="clr-namespace:Ion.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="{i:Style Key=FrameworkElement}"/>
    </ResourceDictionary.MergedDictionaries>
    <Style x:Key="{x:Type i:AngleControl}" TargetType="{x:Type i:AngleControl}" BasedOn="{StaticResource {x:Type FrameworkElement}}">
        <Setter Property="Background" Value="{i:Theme AngleControlBackground}"/>
        <Setter Property="Height" Value="100"/>
        <Setter Property="NeedleStroke" Value="{i:Theme AngleControlNeedleStroke}"/>
        <Setter Property="OriginFill" Value="{i:Theme AngleControlOriginFill}"/>
        <Setter Property="OriginStroke" Value="{i:Theme AngleControlOriginStroke}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type i:AngleControl}">
                    <Grid>
                        <Ellipse i:XElement.Name="{x:Static i:AngleControl.EllipseKey}"
                            Fill="{TemplateBinding Background}"
                            Stroke="{TemplateBinding BorderBrush}"
                            StrokeThickness="{TemplateBinding BorderThickness}"/>
                        <Line i:XElement.Name="{x:Static i:AngleControl.LineKey}"
                            Stroke="{TemplateBinding NeedleStroke}"
                            StrokeThickness="{TemplateBinding NeedleStrokeThickness}"
                            RenderTransformOrigin="0.5,0.5">
                            <Line.RenderTransform>
                                <RotateTransform Angle="0"/>
                            </Line.RenderTransform>
                        </Line>
                        <Ellipse 
                            Fill="{TemplateBinding OriginFill}"
                            Height="{TemplateBinding OriginStrokeThickness}"
                            HorizontalAlignment="Center"
                            Stroke="{TemplateBinding OriginStroke}"
                            VerticalAlignment="Center"
                            Visibility="{TemplateBinding OriginVisibility}"
                            Width="{TemplateBinding OriginStrokeThickness}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Width" Value="100"/>
    </Style>
</ResourceDictionary>