<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:e="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:l="http://wpflocalizeextension.codeplex.com"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="clr-namespace:Ion.Controls"
    xmlns:Behavior="clr-namespace:Ion.Behavior"
    xmlns:Core="clr-namespace:Ion;assembly=Ion"
    xmlns:Data="clr-namespace:Ion.Data">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="{i:Style Key=Button}"/>
        <ResourceDictionary Source="{i:Style Key=ContentControl}"/>
        <ResourceDictionary Source="{i:Style Key=Control}"/>
    </ResourceDictionary.MergedDictionaries>
    <DropShadowEffect x:Key="{x:Static i:DialogControl.DropShadowEffectKey}"
        BlurRadius="8" Color="{i:Theme PopupDropShadow}" Opacity="0.5" ShadowDepth="3"/>

    <Style x:Key="{x:Type i:DialogControl}" TargetType="{x:Type i:DialogControl}" BasedOn="{StaticResource {x:Type Control}}">
        <Setter Property="Background" Value="{i:Bind From=Self, Path=Content.Background, Convert=Data:ConvertByteVector4ToSolidColorBrush}"/>
        <Setter Property="ButtonStyle" Value="{i:Bind DialogButtonStyle, AppSource=Data}"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type i:DialogControl}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding Border.CornerRadius}">
                        <Border.Resources>
                            <Data:Reference x:Key="DialogControl" Data="{i:Bind From=TemplatedParent}"/>
                            <Data:Reference x:Key="DisplayDialog" Data="{Data:Ancestor i:DisplayDialog}"/>
                        </Border.Resources>
                        <Border Effect="{StaticResource {x:Static i:DialogControl.DropShadowEffectKey}}"
                            Background="{i:Theme Key=DialogBackgroundSecondary}"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            MaxHeight="{i:Bind From=TemplatedParent, Path=Content.MaxHeight}" 
                            MaxWidth="{i:Bind From=TemplatedParent, Path=Content.MaxWidth}" 
                            MinWidth="{i:Bind From=TemplatedParent, Path=Content.MinWidth}">
                            <Grid i:XGrid.Rows="Auto,*,Auto,Auto" i:XGrid.AutoRows="True">
                                <!-- Header -->
                                <i:WindowHeader Content="{TemplateBinding Content}"
                                    Background="{i:Theme DialogTitleBackground}"
                                    BorderBrush="{i:Theme DialogTitleBorder}"
                                    BorderThickness="0,0,0,1"
                                    Buttons="{i:Bind Content.HeaderButtons, Convert=Data:ConvertToObjectCollection, From=TemplatedParent}"
                                    ButtonStyle="{TemplateBinding ButtonStyle}"
                                    Padding="{i:Constant Key=Thick}">
                                    <i:WindowHeader.ContentTemplate>
                                        <DataTemplate>
                                            <Grid i:XGrid.AutoColumns="True" i:XGrid.Columns="Auto,Auto,Auto,Auto"
                                                DataContext="{Data:Ancestor {x:Type i:DialogControl}}">
                                                <i:ImageElement Source="{i:Bind Content.Image, Convert=Data:ConvertToImageSource}"
                                                    Foreground="{i:Theme DialogTitleForeground}"
                                                    Margin="0,0,5,0"
                                                    Visibility="{i:Bind Source, Convert=Data:ConvertObjectToVisibility, From=Self}"/>
                                                <TextBlock Text="{i:Bind Content.Title}"
                                                    FontSize="15"
                                                    Foreground="{i:Theme DialogTitleForeground}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </i:WindowHeader.ContentTemplate>
                                </i:WindowHeader>
                                <!--  Body  -->
                                <Border Background="{i:Theme DialogBodyBackground}"
                                    Padding="{TemplateBinding Padding}">
                                    <ContentPresenter x:Name="Content" Content="{i:Bind From=TemplatedParent, Path=Content.Content}">
                                        <e:Interaction.Behaviors>
                                            <Behavior:DynamicResourceBehavior Key="{i:Bind From=TemplatedParent, Path=Content.ContentTemplate}" Property="{x:Static ContentPresenter.ContentTemplateProperty}" />
                                        </e:Interaction.Behaviors>
                                    </ContentPresenter>
                                </Border>
                                <!-- Footer -->
                                <i:TopBorder Background="{i:Theme DialogFooterBackground}"
                                    BorderBrush="{i:Theme DialogFooterBorder}"
                                    Padding="{i:Constant Key=Thick}" 
                                    Visibility="{i:Bind Content.FooterButtons, Convert=Data:ConvertObjectToVisibility, From=TemplatedParent}">
                                    <i:DisplayButton Content="{i:Bind Content.FooterButtons, From=TemplatedParent}"/>
                                </i:TopBorder>
                                <Border Background="{i:Theme Key=Accent}" Height="3"/>
                            </Grid>
                        </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>