<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="clr-namespace:Ion.Controls"
    xmlns:Data="clr-namespace:Ion.Data">
    <Style x:Key="{x:Static i:XElement.FocusVisualStyleKey}" TargetType="Control">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle
                        Stroke="#CC000000"
                        StrokeThickness="1"
                        StrokeDashArray="1 2"
                        SnapsToDevicePixels="True"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- /// -->

    <Style x:Key="{x:Type FrameworkElement}" TargetType="{x:Type FrameworkElement}">
        <Setter Property="FocusVisualStyle" Value="{StaticResource {x:Static i:XElement.FocusVisualStyleKey}}"/>
    </Style>

    <!-- /// -->

    <Style x:Key="{x:Type i:Element}" TargetType="{x:Type i:Element}" BasedOn="{StaticResource {x:Type FrameworkElement}}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
    </Style>

    <Style x:Key="{x:Type i:FillElement}" TargetType="{x:Type i:FillElement}" BasedOn="{StaticResource {x:Type i:Element}}"/>

    <Style x:Key="{x:Type i:RotateElement}" TargetType="{x:Type i:RotateElement}" BasedOn="{StaticResource {x:Type i:Element}}">
        <Style.Triggers>
            <Trigger Property="Rotate" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Duration="0:0:0.4"
                                From="0"
                                Storyboard.TargetProperty="RotationScale"
                                To="1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Duration="0:0:0.2"
                                From="1"
                                Storyboard.TargetProperty="RotationScale"
                                To="0"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- /// -->

    <Style x:Key="{x:Type i:ImageElement}" TargetType="{x:Type i:ImageElement}" BasedOn="{StaticResource {x:Type FrameworkElement}}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality" />
        <Setter Property="SourceSize" Value="16,16" />
        <Setter Property="SnapsToDevicePixels" Value="False" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="{x:Type i:LineElement}" TargetType="{x:Type i:LineElement}" BasedOn="{StaticResource {x:Type FrameworkElement}}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Stroke" Value="{i:Theme LineStroke}"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="Width" Value="Auto"/>
                <Setter Property="Height" Value="{i:Bind From=Self, Path=StrokeThickness}"/>
            </Trigger>
            <Trigger Property="Orientation" Value="Vertical">
                <Setter Property="Width" Value="{i:Bind From=Self, Path=StrokeThickness}"/>
                <Setter Property="Height" Value="Auto"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- /// -->

    <Style x:Key="{x:Type i:XOrElement}" TargetType="{x:Type i:XOrElement}" BasedOn="{StaticResource {x:Type FrameworkElement}}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
    </Style>

    <!-- /// -->

    <Style x:Key="{x:Type i:XOrRegion}" TargetType="{x:Type i:XOrRegion}" BasedOn="{StaticResource {x:Type i:XOrElement}}"/>

    <Style x:Key="{x:Type i:XOrEllipse}" TargetType="{x:Type i:XOrEllipse}" BasedOn="{StaticResource {x:Type i:XOrRegion}}"/>

    <Style x:Key="{x:Type i:XOrRectangle}" TargetType="{x:Type i:XOrRectangle}" BasedOn="{StaticResource {x:Type i:XOrRegion}}"/>

    <!-- /// -->

    <Style x:Key="{x:Type i:XOrLine}" TargetType="{x:Type i:XOrLine}" BasedOn="{StaticResource {x:Type i:XOrElement}}"/>

    <Style x:Key="{x:Type i:XOrPolygon}" TargetType="{x:Type i:XOrPolygon}" BasedOn="{StaticResource {x:Type i:XOrElement}}"/>
</ResourceDictionary>