<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:l="http://wpflocalizeextension.codeplex.com"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="clr-namespace:Ion.Controls"
    xmlns:Analysis="clr-namespace:Ion.Analysis;assembly=Ion"
    xmlns:Data="clr-namespace:Ion.Data">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="{i:Style Key=Control}"/>
    </ResourceDictionary.MergedDictionaries>
    <Style x:Key="{x:Type i:ErrorControl}" TargetType="{x:Type i:ErrorControl}" BasedOn="{StaticResource {x:Type Control}}">
        <Setter Property="Content" Value="{i:Bind From=Self, Path=Error}"/>
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate DataType="Analysis:Error">
                    <TextBlock
                        Text="{i:Bind Text}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="{Data:Ancestor Wrap, i:ErrorControl}"
                        ToolTip="{i:Bind From=Self, Path=Text}"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type i:ErrorControl}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding Border.CornerRadius}"
                        Padding="{TemplateBinding Padding}">
                        <Expander IsExpanded="{i:Bind From=TemplatedParent, Path=IsExpanded, Mode=TwoWay}">
                            <Expander.Header>
                                <Grid i:XGrid.AutoColumns="True" i:XGrid.Columns="Auto,*">
                                    <TextBlock
                                        FontStyle="Italic"
                                        FontWeight="Bold"
                                        Opacity="0.6"
                                        Text="{i:Bind From=TemplatedParent, Path=Error.Name}"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="{TemplateBinding Wrap}"
                                        ToolTip="{i:Bind From=Self, Path=Text}"/>
                                    <ContentPresenter x:Name="Preview" Content="{TemplateBinding Error}" ContentTemplate="{i:Template Key=Default}"/>
                                </Grid>
                            </Expander.Header>
                            <StackPanel i:XPanel.Spacing="0,0,0,5" i:XPanel.SpacingExcept="Last">
                                <ContentPresenter Content="{TemplateBinding Error}" ContentTemplate="{TemplateBinding ContentTemplate}" ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}"/>
                                <Border
                                    BorderBrush="#11000000"
                                    BorderThickness="1"
                                    Padding="10"
                                    Visibility="{i:Bind InternalError, Convert=Data:ConvertObjectToVisibility, From=TemplatedParent}">
                                    <ContentPresenter Content="{TemplateBinding InternalError}">
                                        <ContentPresenter.ContentTemplate>
                                            <DataTemplate>
                                                <i:ErrorControl Error="{i:Bind}"/>
                                            </DataTemplate>
                                        </ContentPresenter.ContentTemplate>
                                    </ContentPresenter>
                                </Border>
                                <Expander IsExpanded="{i:Bind From=TemplatedParent, Path=IsChildExpanded, Mode=TwoWay}" Visibility="{i:Bind Error.StackTrace, Convert=Data:ConvertObjectToVisibility, From=TemplatedParent}">
                                    <Expander.Header>
                                        <TextBlock
                                            FontSize="12"
                                            FontWeight="Bold"
                                            Opacity="0.6"
                                            Text="{i:Text Stack}"
                                            TextTrimming="CharacterEllipsis"/>
                                    </Expander.Header>
                                    <Border 
                                        BorderBrush="#11000000"
                                        BorderThickness="1"
                                        Padding="10">
                                        <TextBlock
                                            FontStyle="Italic"
                                            Text="{i:Bind From=TemplatedParent, Path=Error.StackTrace}"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="{TemplateBinding Wrap}"
                                            ToolTip="{i:Bind From=Self, Path=Text}"/>
                                    </Border>
                                </Expander>
                            </StackPanel>
                        </Expander>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsExpanded" Value="False">
                            <Setter TargetName="Preview" Property="Margin" Value="{i:Constant Key=ThickLeftRight}"/>
                            <Setter TargetName="Preview" Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate DataType="Analysis:Error">
                                        <TextBlock Text="{i:Bind Text, Convert=Data:ConvertToStringWithoutNewLines}" Opacity="0.5"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap"
                                            ToolTip="{i:Bind From=Self, Path=Text}"/>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>