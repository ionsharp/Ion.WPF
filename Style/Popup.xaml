<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="clr-namespace:Ion.Controls">
    <DropShadowEffect x:Key="{x:Static i:XPopup.DropShadowEffectKey}"
        BlurRadius="8" Color="{i:Theme PopupDropShadow}" Opacity="0.64" ShadowDepth="1"/>

    <Style x:Key="{x:Type i:PopupBorder}" TargetType="{x:Type i:PopupBorder}">
        <Setter Property="Background" Value="{i:Theme PopupBackground}"/>
        <Setter Property="BorderBrush" Value="{i:Theme PopupBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Effect" Value="{StaticResource {x:Static i:XPopup.DropShadowEffectKey}}"/>
        <Setter Property="Margin" Value="10"/>
    </Style>

    <Style x:Key="{x:Type Popup}" TargetType="{x:Type Popup}">
        <Setter Property="AllowsTransparency" Value="True" />
        <Setter Property="Margin" Value="-10" />
        <Setter Property="MaxHeight" Value="{x:Static i:XPopup.MaximumHeight}" />
        <Setter Property="MinHeight" Value="{x:Static i:XPopup.MinimumHeight}" />
        <Setter Property="Placement" Value="Bottom"/>
        <Setter Property="PopupAnimation" Value="Fade"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>
</ResourceDictionary>