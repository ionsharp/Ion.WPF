<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="clr-namespace:Ion.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="{i:Style Key=Control}"/>
    </ResourceDictionary.MergedDictionaries>
    <Style x:Key="{x:Type i:Clock}" TargetType="{x:Type i:Clock}" BasedOn="{StaticResource {x:Type Control}}">
        <Setter Property="AStroke" Value="{i:Theme ClockAStroke}"/>
        <Setter Property="AStrokeThickness" Value="8"/>
        <Setter Property="BStroke" Value="{i:Theme ClockBStroke}"/>
        <Setter Property="BStrokeThickness" Value="8"/>
        <Setter Property="CenterTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Ellipse
                        Fill="{i:Theme ClockCenterStroke}"
                        Height="6"
                        Width="6"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Height" Value="100"/>
        <Setter Property="HourStroke" Value="{i:Theme ClockHourStroke}"/>
        <Setter Property="IntermediateTickStroke" Value="{i:Theme ClockIntermediateTickStroke}"/>
        <Setter Property="MajorTickStroke" Value="{i:Theme ClockMajorTickStroke}"/>
        <Setter Property="MajorTickStrokeThickness" Value="2"/>
        <Setter Property="MinorTickStroke" Value="{i:Theme ClockMinorTickStroke}"/>
        <Setter Property="MinorTickStrokeThickness" Value="1.5"/>
        <Setter Property="MinuteStroke" Value="{i:Theme ClockMinuteStroke}"/>
        <Setter Property="SecondStroke" Value="{i:Theme ClockSecondStroke}"/>
        <Setter Property="Width" Value="100"/>
    </Style>
</ResourceDictionary>