<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="clr-namespace:Ion.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="{i:Style Key=FrameworkElement}"/>
    </ResourceDictionary.MergedDictionaries>
    <Style x:Key="{x:Type i:Ruler}" TargetType="{x:Type i:Ruler}" BasedOn="{StaticResource {x:Type FrameworkElement}}">
        <Setter Property="AutoSize" Value="True" />
        <Setter Property="Background" Value="{i:Theme RulerBackground}" />
        <Setter Property="BorderBrush" Value="{i:Theme RulerBorder}" />
        <Setter Property="ChipColor" Value="#22000000" />
        <Setter Property="Foreground" Value="{i:Theme RulerForeground}" />
        <Setter Property="Height" Value="32" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Resolution" Value="72" />
        <Setter Property="SmallStep" Value="10" />
        <Setter Property="Step" Value="50" />
        <Setter Property="TickPlacement" Value="Top" />
        <Setter Property="TickStroke" Value="{i:Theme RulerTickStroke}" />
        <Setter Property="Unit" Value="Pixel" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
</ResourceDictionary>