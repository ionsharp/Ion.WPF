<MenuItem x:Class="Ion.Controls.MenuItemSlider" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:i="clr-namespace:Ion.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="PART_MenuItem">
    <MenuItem.Template>
        <ControlTemplate TargetType="{x:Type MenuItem}">
            <Grid x:Name="PART_Grid">
                <Border
                    Panel.ZIndex="1"
                    HorizontalAlignment="Left"  
                    Padding="10,0"
                    VerticalAlignment="Stretch">
                    <Slider 
                        x:Name="PART_Slider" 
                        Height="{i:Bind Height, ElementName=PART_MenuItem}" 
                        IsDirectionReversed="True"
                        IsSnapToTickEnabled="True"  
                        Maximum="1000"
                        Minimum="0"
                        Orientation="Vertical" 
                        Style="{i:Bind SliderStyle, ElementName=PART_MenuItem}"
                        TickPlacement="None"/>
                </Border>
                <ItemsPresenter x:Name="PART_Items"/>
            </Grid>
        </ControlTemplate>
    </MenuItem.Template>
</MenuItem>