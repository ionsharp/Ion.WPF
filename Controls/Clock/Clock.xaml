<Control x:Class="Ion.Controls.Clock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="clr-namespace:Ion.Controls"
    xmlns:Data="clr-namespace:Ion.Data">
    <Control.Template>
        <ControlTemplate TargetType="{x:Type i:Clock}">
            <Viewbox>
                <Grid>
                    <Canvas DataContext="{i:Bind From=TemplatedParent}" i:XElement.Name="{x:Static i:Clock.CanvasKey}"
                        Height="100"
                        SnapsToDevicePixels="False"
                        Width="100">
                        <!-- ... Path -->
                        <Ellipse
                            Panel.ZIndex="2"
                            Canvas.Left="{i:Bind APosition.X}"
                            Canvas.Top="{i:Bind APosition.Y}"
                            Fill="{i:Bind AStroke}"
                            Height="{i:Bind AStrokeThickness}"
                            Visibility="{i:Bind AVisibility}"
                            Width="{i:Bind AStrokeThickness}"/>
                        <Ellipse
                            Panel.ZIndex="2"
                            Canvas.Left="{i:Bind BPosition.X}"
                            Canvas.Top="{i:Bind BPosition.Y}"
                            Fill="{i:Bind BStroke}"
                            Height="{i:Bind BStrokeThickness}"
                            Visibility="{i:Bind BVisibility}"
                            Width="{i:Bind BStrokeThickness}"/>
                        <!-- ... Hands -->
                        <Line
                            RenderTransform="{i:Bind HourTransform}"
                            Stroke="{i:Bind HourStroke}"
                            StrokeThickness="{i:Bind HourStrokeThickness}"
                            X1="50"
                            Y1="50"
                            X2="50"
                            Y2="10"/>
                        <Line
                            RenderTransform="{i:Bind MinuteTransform}"
                            Stroke="{i:Bind MinuteStroke}"
                            StrokeThickness="{i:Bind MinuteStrokeThickness}"
                            X1="50"
                            Y1="50"
                            X2="50"
                            Y2="0"/>
                        <Line
                            RenderTransform="{i:Bind SecondTransform}"
                            Stroke="{i:Bind SecondStroke}"
                            StrokeThickness="{i:Bind SecondStrokeThickness}"
                            X1="50"
                            Y1="50"
                            X2="50"
                            Y2="0"/>
                    </Canvas>
                    <ContentPresenter
                        ContentTemplate="{TemplateBinding CenterTemplate}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                </Grid>
            </Viewbox>
        </ControlTemplate>
    </Control.Template>
</Control>